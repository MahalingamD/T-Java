<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="10dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/inflate_card_linear"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_height_inflate_card_linear"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/style_theme_order_text"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/inflate_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/inflate_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
           android:textSize="@dimen/order_text_size"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inflate_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textAllCaps="true"
            android:textColor="@color/white" />


    </LinearLayout>

</android.support.v7.widget.CardView>


