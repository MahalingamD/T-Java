<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_inflate_user_mgmnt_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.andexert.library.RippleView
            android:id="@+id/layout_inflate_my_cart_order_item_cancel_RV"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center"
            app:rv_rippleDuration="100"
            app:rv_type="rectangle"
            app:rv_zoom="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:tint="@color/white" />

        </com.andexert.library.RippleView>
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corner_order_item"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_inflate_my_cart_item_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/layout_inflate_my_cart_order_model_name_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/layout_inflate_my_cart_order_item_shipName_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_too_small"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/layout_inflate_my_inven_id_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_too_small"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/layout_inflate_my_cart_order_model_descrtion_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_too_small"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/layout_inflate_my_cart_order_item_count_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium1"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/layout_inflate_my_cart_order_item_next_IM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:src="@drawable/ic_keyboard_arrow_right"
                android:tint="@color/dark_grey" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.daimajia.swipe.SwipeLayout>